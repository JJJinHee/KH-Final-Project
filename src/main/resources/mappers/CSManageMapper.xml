<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.project.admin.csManage.model.dao.CSManageMapper">

	<resultMap id="questionResultMap" type="com.kh.project.cs.model.vo.QABoard">
		<id property="QNo" column="Q_NO"/>
		<result property="QTitle" column="Q_TITLE"/>
		<result property="QHit" column="Q_HIT"/>
		<result property="createDate" column="CREATE_DATE"/>
		<result property="modifyDate" column="MODIFY_DATE"/>
		<result property="QContent" column="Q_CONTENT"/>
		<result property="status" column="STATUS"/>
		<result property="secretStatus" column="SECRET_STATUS"/>
		<result property="userNo" column="USER_NO"/>
		<result property="userId" column="USER_ID"/>
		<result property="userName" column="USER_NAME"/>
		<result property="categoryNo" column="CATEGORY_NO"/>
		<result property="categoryName" column="CATEGORY_NAME"/>
		<association property="answer" resultMap="answerResultMap"/>
	</resultMap>

	<resultMap id="answerResultMap" type="com.kh.project.cs.model.vo.Answer">
		<id property="ANo" column="A_NO"/>
		<result property="AContent" column="A_CONTENT"/>
		<result property="createDate" column="A_CREATE_DATE"/>
		<result property="modifyDateLDate" column="A_MODIFY_DATE"/>
		<result property="status" column="A_STATUS"/>
		<result property="QNo" column="Q_NO"/>
	</resultMap>
	
	<select id="selectQuestionList" resultMap="questionResultMap">
		SELECT
		       Q_NO
		     , Q_TITLE
		     , Q_HIT
		     , Q.CREATE_DATE
		     , Q_CONTENT
		     , USER_NO
		     , USER_ID
		     , USER_NAME
		     , CATEGORY_NO
		     , CATEGORY_NAME
		     , A_NO
		     , A_CONTENT
		     , A_CREATE_DATE
		     , A.STATUS A_STATUS
		  FROM QUESTION Q
		  JOIN MEMBER USING(USER_NO)
		  JOIN CATEGORY USING(CATEGORY_NO)
		  LEFT JOIN ANSWER A USING(Q_NO)
		 WHERE Q.STATUS = 'N'
		 ORDER BY Q_NO DESC
	</select>
	
	<select id="selectQuestionByNo" resultMap="questionResultMap">
		SELECT
		       Q_NO
		     , Q_TITLE
		     , Q_HIT
		     , Q.CREATE_DATE
		     , Q_CONTENT
		     , USER_NO
		     , USER_ID
		     , USER_NAME
		     , CATEGORY_NO
		     , CATEGORY_NAME
		     , A_NO
		     , A_CONTENT
		     , A_CREATE_DATE
		     , A.STATUS A_STATUS
		  FROM QUESTION Q
		  JOIN MEMBER USING(USER_NO)
		  JOIN CATEGORY USING(CATEGORY_NO)
		  LEFT JOIN ANSWER A USING(Q_NO)
		 WHERE Q_NO = #{ no }
	</select>
	
	<update id="deleteAnswer" parameterType="_int">
		UPDATE ANSWER
		   SET STATUS = 'Y'
		 WHERE A_NO = #{ ANo }
	</update>
	
	<update id="deleteQuestion" parameterType="_int">
		UPDATE QUESTION
		   SET STATUS = 'Y'
		 WHERE Q_NO = #{ QNo }
	</update>
	

</mapper>